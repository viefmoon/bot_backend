# Base de datos PostgreSQL
# Railway proporciona DATABASE_URL automáticamente al vincular PostgreSQL
# No necesitas configurar nada manualmente

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_MESSAGING_ID=123456789
WHATSAPP_ACCESS_TOKEN=tu_token_de_acceso_whatsapp
WHATSAPP_VERIFY_TOKEN=tu_token_verificacion
BOT_WHATSAPP_NUMBER=521234567890

# API de IA - Google Gemini
GOOGLE_AI_API_KEY=AIza... # OBLIGATORIO - El bot usa Google Gemini

# Stripe (Pagos)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Google Maps (OPCIONAL - solo si usas mapas en el frontend)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIza...

# Configuración de URLs
NEXT_PUBLIC_BACKEND_BASE_URL=https://tu-backend.railway.app
FRONTEND_BASE_URL=https://tu-frontend.railway.app

# Configuración del Restaurante
TIME_ZONE=America/Mexico_City
OPENING_HOURS_TUES_SAT=14:00
CLOSING_HOURS_TUES_SAT=22:00
OPENING_HOURS_SUN=14:00
CLOSING_HOURS_SUN=21:00

# Períodos de gracia (minutos antes/después del horario)
OPENING_GRACE_PERIOD_MINUTES=30
CLOSING_GRACE_PERIOD_MINUTES=30

# Tiempos estimados de preparación (en minutos)
ESTIMATED_PICKUP_TIME=20
ESTIMATED_DELIVERY_TIME=40

# Rate Limiting
RATE_LIMIT_MAX_MESSAGES=30
RATE_LIMIT_TIME_WINDOW_MINUTES=5

# Autenticación Frontend (OPCIONAL - solo si tienes frontend)
NEXT_PUBLIC_DEFAULT_USERNAME=admin
NEXT_PUBLIC_DEFAULT_PASSWORD=password123

# Área de entrega (OPCIONAL - coordenadas del polígono en formato JSON)
NEXT_PUBLIC_POLYGON_COORDS=[{"lat": 20.54, "lng": -102.79}]

# Entorno
NODE_ENV=production

# Puerto (Railway lo asigna automáticamente)
# PORT=5000

# =============================================
# VARIABLES MÍNIMAS REQUERIDAS PARA RAILWAY:
# =============================================
# 1. DATABASE_URL - Se genera automáticamente al vincular PostgreSQL
# 2. WHATSAPP_PHONE_NUMBER_MESSAGING_ID - Obligatorio
# 3. WHATSAPP_ACCESS_TOKEN - Obligatorio
# 4. WHATSAPP_VERIFY_TOKEN - Obligatorio
# 5. BOT_WHATSAPP_NUMBER - Obligatorio
# 6. GOOGLE_AI_API_KEY - Obligatorio (para el bot con IA)
# 7. TIME_ZONE - Obligatorio
# 8. OPENING_HOURS_TUES_SAT - Obligatorio
# 9. CLOSING_HOURS_TUES_SAT - Obligatorio
# 10. OPENING_HOURS_SUN - Obligatorio
# 11. CLOSING_HOURS_SUN - Obligatorio
# 12. OPENING_GRACE_PERIOD_MINUTES - Obligatorio
# 13. CLOSING_GRACE_PERIOD_MINUTES - Obligatorio
# 14. ESTIMATED_PICKUP_TIME - Obligatorio
# 15. ESTIMATED_DELIVERY_TIME - Obligatorio
# 16. STRIPE_SECRET_KEY - Si usas pagos
# 17. STRIPE_WEBHOOK_SECRET - Si usas pagos
# 18. FRONTEND_BASE_URL - Si tienes frontend
# 19. NODE_ENV=production - Obligatorio en Railway