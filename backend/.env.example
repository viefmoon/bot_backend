# ===== BASE DE DATOS =====
# Para desarrollo local con Docker
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/bot_db

# Para Railway (se configura automáticamente)
# DATABASE_URL=postgresql://...

# ===== CONFIGURACIÓN REQUERIDA =====

# 1. Google AI - REQUERIDO
# Obtén tu API Key gratis en: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=tu_api_key_aqui

# 2. WhatsApp Business API - REQUERIDO
# Obtén estos valores en: https://developers.facebook.com
WHATSAPP_PHONE_NUMBER_MESSAGING_ID=tu_phone_number_id
WHATSAPP_ACCESS_TOKEN=tu_access_token
WHATSAPP_VERIFY_TOKEN=tu_verify_token
BOT_WHATSAPP_NUMBER=521234567890

# ===== CONFIGURACIÓN DEL RESTAURANTE =====

# Zona horaria
TIME_ZONE=America/Mexico_City

# Horarios del restaurante
OPENING_HOURS_TUES_SAT=14:00
CLOSING_HOURS_TUES_SAT=22:00
OPENING_HOURS_SUN=14:00
CLOSING_HOURS_SUN=21:00

# Tiempos de preparación
OPENING_GRACE_PERIOD_MINUTES=30
CLOSING_GRACE_PERIOD_MINUTES=30
ESTIMATED_PICKUP_TIME=20
ESTIMATED_DELIVERY_TIME=40

# URLs
FRONTEND_BASE_URL=https://tu-dominio.com
NODE_ENV=production

# Límites de mensajes
RATE_LIMIT_MAX_MESSAGES=30
RATE_LIMIT_TIME_WINDOW_MINUTES=5

# ===== OPCIONAL - STRIPE (Pagos) =====
# Solo si quieres habilitar pagos con tarjeta
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=